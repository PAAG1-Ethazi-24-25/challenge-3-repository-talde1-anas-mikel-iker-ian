<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="devworks.controller.MenuBotoiak">
   <children>
      <VBox alignment="CENTER">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ongi Etorri!" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="48.0" />
               </font>
            </Text>
         </children>
      </VBox>

      <!-- Imagen del logo de la empresa -->
      <VBox alignment="CENTER">
         <children>
            <ImageView fitHeight="250.0" fitWidth="250.0" preserveRatio="true">
               <image>
                  <Image url="@../img/Logo_Empresa.png" />
               </image>
            </ImageView>            
         </children>
      </VBox>      

      <StackPane>
         <children>
            <GridPane alignment="CENTER" prefHeight="213.0" prefWidth="589.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false"
                           onAction="#handleProduktoak" text="Produktoak" textAlignment="CENTER">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" GridPane.columnIndex="1">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                           onAction="#handleLangileak" text="Langileak" textAlignment="CENTER">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" GridPane.rowIndex="1">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                           onAction="#handleBezeroak" text="Bezeroak"
                           textAlignment="CENTER">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="56.0" prefWidth="273.0"
                     GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                           onAction="#handleSalmentak" text="Salmentak" textAlignment="CENTER">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </StackPane>
      <VBox alignment="CENTER" prefHeight="80.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleIrten" text="Irten"
               textAlignment="CENTER"
               style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 24px; 
           -fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 10px; 
           -fx-border-radius: 10px;">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>